{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-signup outer">
    <div class="inner">


    {{#if @member}}
        {{!-- Not logged in: Redirect to member account --}}
        <script>window.location = '{{@site.url}}/account';</script>

    {{else}}
    
    {{!-- Not Logged in, not paying: Check out --}}
    <div class="checkout-form">
        <h1 class="checkout-title1"> </h1>
        <h1 class="checkout-title">Membership</h1>
        <p>Unlock full access to {{@site.title}} members-only content & updates</p>
        <div class="checkout-box">
            <div class="checkout-plan">
                <header class="checkout-plan-header">
                    <h3>Guest</h3>
                    <span>Free</span>
                </header>
                <div class="checkout-plan-content">
                    <ul>
                      <li>Access to public stories</li>
                    </ul>
                </div>
            </div>
            <div class="checkout-plan">
                <header class="checkout-plan-header">
                    <h3>Subscriber</h3>
                    <span>Free</span>
                </header>
                <div class="checkout-plan-content">
                    <ul>
                        <li>Full access to private stories</li>
                        <li>Newsletter to your email once in decade</li>
                        <li>No advertising</li>
                        <li>No clickbait</li>
                        <li>No bullshit</li>
                    </ul>
                    <a class="button primary fit" href="/#/portal/signup/free">Become a Subscriber</a>
                </div>
            </div>
            <div class="checkout-plan">
                <header class="checkout-plan-header">
                    <h3>Patron</h3>
                    <span>From $</span><strong>1</strong> / mo
                </header>
                <div class="checkout-plan-content">
                    <ul>
                        <li>All Subscriber's features</li>
                        <li>Infinite respect</li>
                        <li>Support independent publishing</li>
                        <li>Simple, secure payment with Patreon</li>
                    </ul>
                    <a class="button primary fit" href="https://www.patreon.com/bePatron?u=27861262"
                     target="_blank" rel="noopener noreferrer" onclick="getOutboundLink('https://www.patreon.com/bePatron?u=27861262'); return false;">Become a Patron</a>
                </div>
            </div>
        </div>

         <h1 class="checkout-title1"> </h1>
        <p><small>Already have member's account? <a href="{{@site.url}}/#/portal/signin">Sign in</a></small></p>
        
    </div>
    
   
    

    {{/if}}

    </div>
</main>
